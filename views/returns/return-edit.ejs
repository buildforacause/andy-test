<body>
  <%- include('../templates/header.ejs'); %>
  <%- include('../templates/navbar.ejs'); %>

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Update Refund Status</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin">Home</a></li>
          <li class="breadcrumb-item active">Update Refund Status</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    <section class="section profile">
      <div class="row">
        <div class="col-xl-12 col-md-12">
          <p><span style="font-weight: 600!important;">Order id: </span><%= order._id %></p>
          <p><span style="font-weight: 600!important;">Customer Details: </span><%= order.user.name %>, <%= order.user.email %>, <%= order.address.aphone %></p>
          <p style="margin: 0!important;"><span style="font-weight: 600!important;">Products: </span></p>
          <% order.allProduct.forEach(element => { %>
          <div class="">
            <p style="font-weight: 500;margin-bottom: 1rem;" class="widget-title">
              <%= element.id.name %> (₹<%= element.id.price %><span style="font-weight: 400;"> x <%= element.quantity %>)
            </p>
          </div>
          <% }) %>
          <p><span style="font-weight: 600!important;">Total Cost </span>₹<%= order.amount %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-xl-10 col-md-10" style="padding: 30px;background-color: #c9d0df;">
          <form id="return-form">
            <center><span id="adresponse" class="text-danger"></span></center>
            <input type="hidden" name="userid" value="<%= order.user._id %>">
            <input type="hidden" name="orderid" value="<%= order._id %>">

            <div class="form-group mb-3">
              <label for="reason">What is your reason for returning the product? *</label>
              <!-- <input type="text" class="form-control" id="singin-email"  required> -->
              <select class="form-select form-control" id="reason" name="reason" aria-label=".form-select-sm example" required>
                <!-- <option selected>Open this select menu</option> -->
                <option value="Manufacturing defect" <% if (order.refund.reason=="Manufacturing defect") { %>selected<% } %>>Manufacturing defect</option>
                <option value="Wrong Product/Size recieved" <% if (order.refund.reason=="Wrong Product/Size recieved") { %>selected<% } %>>Wrong Product/Size recieved</option>
              </select>
            </div><!-- End .form-group -->

            <div class="form-group mb-3">
              <label for="description">Describe what happened *</label>
              <textarea type="text" class="form-control" id="description" name="description" required><%= order.refund.description %></textarea>
            </div><!-- End .form-group -->

            <div class="form-group mb-3">
              <label for="payment">Enter payment details *</label>
              <textarea type="text" class="form-control" id="payment" name="payment" required><%= order.refund.payment %></textarea>
            </div>

            <div class="form-group mb-3">
              <label for="status">Status *</label>
              <textarea type="text" class="form-control" id="status" name="status" required><%= order.refund.status %></textarea>
            </div>

            <div class="form-footer">

              <button type="submit" form="return-form" class="btn btn-primary">
                <span>Update return request</span>
                <i class="icon-long-arrow-right"></i>
              </button>

              <!-- <a href="#" class="forgot-link">Forgot Your Password?</a> -->
            </div>
            <!-- End .form-footer -->
          </form>
        </div>
      </div>
    </section>

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <footer id="footer" class="footer">
    <div class="credits">
      Designed by <a href="#">JVSH Technologies</a>
    </div>
  </footer><!-- End Footer -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

