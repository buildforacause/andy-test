<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>All Influencer Accounts</title>
  <meta content name="description">
  <meta content name="keywords">

  <!-- Favicons -->
  <link href="/assets/img/favicon.png" rel="icon">
  <link href="/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link href="https://fonts.gstatic.com" rel="preconnect">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
  <link href="/assets/vendor/quill/quill.snow.css" rel="stylesheet">
  <link href="/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
  <link href="/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
  <link href="//cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css" rel="stylesheet" />

  <!-- Template Main CSS File -->
  <link href="/assets/css/style.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
  <style>

  </style>

</head>

<body>
  <%- include('../templates/header.ejs'); %>
  <%- include('../templates/navbar.ejs'); %>

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>All Influencer Accounts</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin">Home</a></li>
          <li class="breadcrumb-item active">All Influencer
            Accounts</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <a href="#exampleModal" data-bs-toggle="modal" class="btn btn-primary w-100 mb-3">Add New Influencer</a>

    <section class="section profile">
      <div class="row">

        <div class="col-xl-12 col-md-12">

          <div class>
            <div class>

              <table class="table w-90 col-md-12 col-xs-3" id="tblUser">
                <thead>

                  <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <!-- loop start -->
                  <% influencers.forEach(inf => { %>
                  <tr>
                    <td><%= inf.name %></td>
                    <td><%= inf.email %></td>
                    <td>
                      <form method="POST" action="/api/delete/influencer" onsubmit="return confirmDelete();">
                        <input type="hidden" value="<%= inf._id %>" name="uid">
                        <div class="text-center mt-0">
                          <button id="delete" class="btn btn-danger">Delete</button>
                        </div>
                      </form>
                    </td>
                  </tr>
                  <% }) %>

                </tbody>

              </table>
              <!-- ============displaying data with approval button========== -->

            </div>
          </div>

        </div>
      </div>

    </section>

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <footer id="footer" class="footer">
    <div class="credits">
      Designed by <a href="#">JVSH Technologies</a>
    </div>
  </footer><!-- End Footer -->



  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>


  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Add New Influencer</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

          <form id="influencersForm" class="needs-validation" novalidate>
            <div class="mb-3">
              <label for="name" class="form-label">Name *</label>
              <input type="text" class="form-control" id="name" name="name" placeholder="Anand Morye" required>
              <div class="invalid-feedback">
                Please provide a name.
              </div>
              <span id="err-name" class="mb-2 text-danger"></span>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email address *</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
              <div class="invalid-feedback">
                Please provide a valid email.
              </div>
              <span id="err-email" class="mb-2 text-danger"></span>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password *</label>
              <input type="password" class="form-control" name="password" id="password" required>
              <div class="invalid-feedback">
                Please provide a valid password.
              </div>
              <span id="err-password" class="text-danger"></span>
            </div>
            <center><span class="mb-2 text-success" id="successmsg"></span></center>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Create</button>
            </div>
          </form>

        </div>

      </div>
    </div>
  </div>


  <!-- Vendor JS Files -->
  <script src="/assets/vendor/apexcharts/apexcharts.min.js"></script>
  <script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/vendor/chart.js/chart.umd.js"></script>
  <script src="/assets/vendor/echarts/echarts.min.js"></script>
  <script src="/assets/vendor/quill/quill.min.js"></script>
  <script src="/assets/vendor/simple-datatables/simple-datatables.js"></script>
  <script src="/assets/vendor/tinymce/tinymce.min.js"></script>
  <script src="/assets/vendor/php-email-form/validate.js"></script>

  <!-- Template Main JS File -->
  <script src="/assets/js/main.js"></script>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="//cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

  <script>
    (() => {
      'use strict'

      // Fetch all the forms we want to apply custom Bootstrap validation styles to
      const forms = document.querySelectorAll('.needs-validation')

      // Loop over them and prevent submission
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }

          form.classList.add('was-validated')
        }, false)
      })
    })();

    $(document).ready(function() {
      $('#tblUser').DataTable(

      );
    });

    var $infform = $('#influencersForm')
    $infform.on('submit', submitHandler)

    function submitHandler(e) {
      e.preventDefault()
      $.ajax({
        url: '/api/signup/influencer',
        type: 'POST',
        data: $infform.serialize()
      }).done(response => {
        response = JSON.stringify(response)
        response = JSON.parse(response)

        if (response.error) {
          Object.keys(response.error).forEach(function(key) {
            $('#err-' + key).text(response.error[key]);
          })
        } else {
          $("#err-name").hide();
          $("#err-password").hide();
          $("#err-email").hide();
          $("#successmsg").text(response.success);
          // Save the message to localStorage
          localStorage.setItem('reloadMessage', 'New user added!');
          window.location.reload();
        }
      })
    }

    function confirmDelete() {
      // Display a confirmation dialog
      var confirmation = confirm("Are you sure you want to delete this row?");

      // If the user clicks "OK" (true), the form will be submitted
      return confirmation;
    }
  </script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  <script>
    <% if (message) { %>
    Toastify({

      text: "<%= message %>",
      gravity: "bottom",
      style: {
        borderRadius: "10px",
        background: "#0d6ef6"
      },
      duration: 3000

    }).showToast();
    const newUrl = '/admin/influencers';
    window.history.pushState({}, '', newUrl);

    <% } %>

    // Retrieve the message from localStorage
    const reloadMessage = localStorage.getItem('reloadMessage');

    // Check if the message exists and do something with it
    if (reloadMessage) {
      Toastify({

        text: reloadMessage,
        gravity: "bottom",
        style: {
          borderRadius: "10px",
          background: "#0d6ef6"
        },
        duration: 3000

      }).showToast();
      localStorage.removeItem('reloadMessage');
    }
  </script>
</body>

</html>