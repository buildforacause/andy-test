<script>

    var $form = $('#signInForm')
    $form.on('submit', submitHandler)

    function submitHandler (e) {
        e.preventDefault()
        $.ajax({
            url: '/api/signup',
            type:'POST',
            data: $form.serialize()
        }).done(response => {
            response = JSON.stringify(response)
            response = JSON.parse(response)

            if(response.error){
                Object.keys(response.error).forEach(function(key) {
                    $('#err-' + key).text(response.error[key]);
                })
            }else{
                $("#err-name").hide();
                $("#err-password").hide();
                $("#err-email").hide();
                $("#successmsg").text(response.success);
            }
        })
    }

    var $form2 = $('#userLoginForm')
    $form2.on('submit', submitHandler2)

    function submitHandler2 (e) {
        e.preventDefault()
        $.ajax({
            url: '/api/signin',
            type:'POST',
            data: $form2.serialize()
        }).done(response => {
            if(response.error){
                $("#showloginerr").text(response.error)
            }else{
                $("#showloginerr").hide()
                setCookie("autOken", response.token, '/')
                setCookie("userid", response.userid, '/')
                setCookie("role", response.role, '/')
                $("#btn-btn0close").click()
                location.reload();
            }
        })
    }
    
</script>
