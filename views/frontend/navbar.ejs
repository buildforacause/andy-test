<header class="header">
    <div class="header-bottom sticky-header">
        <div class="container">
            <div class="header-left">
                <button class="mobile-menu-toggler">
                    <span class="sr-only">Toggle mobile menu</span>
                    <i class="icon-bars"></i>
                </button>
                
                <a href="/" class="logo">
                    <img style="filter: grayscale(1) invert(1);" src="/frontend/assets/images/demos/demo-8/logo.png" alt="Molla Logo" width="82" height="20">
                </a>
            </div>
            <div class="header-center">
                <nav class="main-nav">
                    <ul class="menu sf-arrows">
                        <li class="megamenu-container">
                            <a href="/" class="">Home</a>
                        </li>
                        <li>
                            <a href="/shop" class="sf-with-ul">Shop</a>

                            <div class="megamenu megamenu-md">
                                <div class="row no-gutters">
                                    <div class="col-md-12">
                                        <div class="menu-col">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="menu-title">Categories</div><!-- End .menu-title -->
                                                    <ul>
                                                        <% navCats.forEach(element => { %>
                                                         
                                                        <li><a href="/shop?filterby=<%= element._id %>"><%= element.cName %></a></li>
                                                        
                                                        <% }) %>
                                                    </ul>
                                                </div><!-- End .col-md-6 -->

                                                <div class="col-md-6">
                                                    <div class="menu-title">Shop Pages</div><!-- End .menu-title -->
                                                    <ul>
                                                        <li><a href="/cart">Cart</a></li>
                                                        <li><a href="/#about">About Us</a></li>
                                                        <% if (user) { %>
                                                            <li><a href="/dashboard">My Account</a></li>
                                                        <% } %>
                                                        
                                                        
                                                    </ul>
                                                </div><!-- End .col-md-6 -->
                                            </div><!-- End .row -->
                                        </div><!-- End .menu-col -->
                                    </div><!-- End .col-md-8 -->

                                </div><!-- End .row -->
                            </div><!-- End .megamenu megamenu-md -->
                        </li>
                        <li>
                            <a href="/#about" class="">About Us</a>
                        </li>
                        <li>
                          <% if(!user){ %>
                            <a href="#signin-modal" data-toggle="modal">Login <i class="icon-user"></i></a>
                            <%  } else {%>
                            <a href="/logout">Logout</a>
                            <% } %>
                        </li>
                    </ul><!-- End .menu -->
                </nav><!-- End .main-nav -->
            </div><!-- End .header-left -->

            <div class="header-right">
                <div class="header-search">
                    <a href="#" class="search-toggle" role="button"><i class="icon-search"></i></a>
                    <form action="/shop" method="get">
                        <div class="header-search-wrapper">
                            <label for="s" class="sr-only">Search</label>
                            <input type="search" class="form-control" name="s" id="s" placeholder="Search in..." required>
                        </div><!-- End .header-search-wrapper -->
                    </form>
                </div><!-- End .header-search -->

                <div id="cart-dropdown" class="dropdown cart-dropdown">
                    <a href="#" class="dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static">
                        <i class="icon-shopping-cart"></i>
                        <span class="cart-count" id="cart-count"></span>
                        <span class="cart-txt" id="cart-total-text"></span>
                    </a>

                    <div class="dropdown-menu dropdown-menu-right">
                        <div class="dropdown-cart-products">
                            

                        </div><!-- End .dropdown-menu -->
                </div><!-- End .cart-dropdown -->
            </div><!-- End .header-right -->
        </div><!-- End .container -->
    </div><!-- End .header-bottom -->
</header><!-- End .header -->