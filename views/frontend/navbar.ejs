<header class="header">
    <div class="header-bottom sticky-header">
        <div class="container">
            <div class="header-left">
                <button class="mobile-menu-toggler">
                    <span class="sr-only">Toggle mobile menu</span>
                    <i class="icon-bars"></i>
                </button>
                
                <a href="/" class="logo">
                    <img style="filter: grayscale(1) invert(1);" src="/frontend/assets/images/demos/demo-8/logo.png" alt="Molla Logo" width="82" height="20">
                </a>
            </div>
            <div class="header-center" style="margin: auto!important;">
                <nav class="main-nav">
                    <ul class="menu sf-arrows">
                        <li class="megamenu-container">
                            <a href="/" class="mylinknav">Home</a>
                        </li>
                        <li>
                            <a href="/shop" class="mylinknav">Shop</a>
                        </li>
                        <li>
                            <a href="/#about" class="mylinknav">About Us</a>
                        </li>
                        <li>
                          <% if(!user){ %>
                            <a href="#signin-modal1" data-toggle="modal" class="mylinknav closenavmodals" onclick="closenavmodal()">Login </a>
                            <%  } else {%>
                            <a href="/logout" class="mylinknav">Logout</a>
                            <% } %>
                            
                        </li>
                        
                    </ul><!-- End .menu -->
                </nav><!-- End .main-nav -->
            </div><!-- End .header-left -->

            <div class="header-right" style="margin-left: 0;">
                <div class="header-search">
                    <a href="#" class="search-toggle" role="button"><i class='bx bx-search-alt-2 myicons'></i></a>
                    <form action="/shop" method="get">
                        <div class="header-search-wrapper">
                            <label for="s" class="sr-only">Search</label>
                            <input type="search" class="form-control" name="s" id="s" placeholder="Search in..." required>
                        </div><!-- End .header-search-wrapper -->
                    </form>
                </div><!-- End .header-search -->
                <a href="/dashboard" id="user-profile-link">
                    <i class='bx bx-user myicons'></i>
                </a>
                <div id="cart-dropdown" class="dropdown cart-dropdown">
                    <a href="#" class="dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static">
                        <i class='bx bx-basket myicons' animation="spin"></i>
                        <span class="cart-count" id="cart-count"></span>
                        <span class="cart-txt" id="cart-total-text"></span>
                    </a>

                    <div class="dropdown-menu dropdown-menu-right heightofcart" style="border-radius: 8px;overflow: hidden;margin-top: 5px;padding-top: 36px;">
                        <div class="dropdown-cart-products">
                            

                        </div><!-- End .dropdown-menu -->
                </div><!-- End .cart-dropdown -->

                
            </div><!-- End .header-right -->
        </div><!-- End .container -->
    </div><!-- End .header-bottom -->
</header><!-- End .header -->
